{% extends 'site.html.jinja2' %}

{% block body %}
<div class="wot-Base">
  <header class="wot-Base-header">
    <div class="wot-Base-content">
      {% block header %}
      {% include 'top.html.jinja2' %}
      {% endblock %}
    </div>
  </header>

  <main role="main" class="wot-Base-main">
  <div class="wot-Base-content">
    {% block main %}

    {% endblock %}
  </div>
  </main>

  <div class="wot-Base-bottom">
    <div class="wot-Base-content">

      {% block bottom %}
      {#
        {{ [chill route '/internal/bottom_nav/{}/'.format(page.slug)] }}
        #}
      {% endblock %}

    </div>

    <footer class="wot-Base-footer">
      <div class="wot-Base-content">

      {% block footer %}
        {% include 'bottom_footer.html.jinja2' %}
      {% endblock %}

      </div>
    </footer>
  </div>
</div>
{% endblock %}
